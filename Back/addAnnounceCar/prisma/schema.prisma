// prisma/schema.prisma
datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Ad {
    id            Int      @id @default(autoincrement())
    brand         String
    model         String
    year          Int
    body          String
    generation    String?
    engineType    String
    driveType     String
    transmission  String
    engineMod     String
    color         String
    mileage       Int
    options       Json
    documentType  String
    owners        Int
    purchaseDate  DateTime
    description   String
    contacts      String
    inspectionLat Float?
    inspectionLng Float?
    price         Float
    licensePlate  String
    vin           String
    sts           String
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    userId        Int
}
